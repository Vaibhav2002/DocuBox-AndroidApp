<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DocuBox" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorPrimaryContainer">@color/colorSecondary</item>
        <item name="colorOnPrimaryContainer">@color/colorOnSecondary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondary</item>
        <item name="colorSecondaryContainer">@color/colorPrimary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>


        <item name="colorOnBackground">@color/colorPrimaryText</item>
        <item name="colorOnSurface">@color/colorSecondaryText</item>

        <item name="android:windowBackground">@color/colorAppBackground</item>
        <item name="android:colorBackground">@color/colorAppBackground</item>


        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="bottomNavigationStyle">@style/Widget.App.BottomNav</item>

    </style>

    <style name="Widget.App.BottomNav" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNav</item>
    </style>

    <style name="ThemeOverlay.App.BottomNav" parent="">
        <item name="colorPrimary">@color/colorAppBackground</item>
        <item name="colorSurface">@color/colorAppBackground</item>
        <item name="colorOnSurface">@color/colorPrimary</item>
        <item name="colorOnSecondaryContainer">@color/colorPrimary</item>
        <item name="colorSecondaryContainer">@android:color/transparent</item>
        <item name="colorOnSurfaceVariant">@color/colorDisabled</item>
    </style>

    <style name="DocuBox.BottomSheet" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="colorPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorOnPrimary</item>

    </style>

</resources>